<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pttsample.mobile.milestonesys.com.pushtotalksample">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".PushToTalkSampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/iva_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/iva_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CameraListActivity"
            android:label="@string/camera_list_title" />
        <activity
            android:name=".PushToTalkActivity"
            android:label="@string/push_to_talk_title" />
    </application>

</manifest>